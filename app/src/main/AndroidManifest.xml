<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.informatika.uas_fadlijahyadi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:label="todolist"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.informatika.uas_fadlijahyadi.SplashScreen"
            android:label="todolist"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.informatika.uas_fadlijahyadi.RegisterActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.informatika.uas_fadlijahyadi.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.informatika.uas_fadlijahyadi.UpdateDataActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.informatika.uas_fadlijahyadi.InsertDataActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="com.informatika.uas_fadlijahyadi.MainActivity"
            android:label="@string/title_activity_login" />
    </application>

</manifest>